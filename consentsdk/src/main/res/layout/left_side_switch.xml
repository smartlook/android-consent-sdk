<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_side_switch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/left_side_switch_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:clickable="false"
        android:focusable="false" />

    <Space
        android:layout_width="@dimen/left_side_switch_horizontal_space"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/left_side_switch_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/consent_form_text_color" />

</LinearLayout>